#{{ ansible_managed }}

[Unit]
Description=rtorrent
Requires=network.target local-fs.target

[Service]
Type=forking
KillMode=none
User={{ rtorrent_user }}
ExecStart=/usr/bin/tmux -L rtorrent new-session -s rtorrent -n rTorrent -d /usr/bin/rtorrent
ExecStop=/usr/bin/tmux -L rtorrent send-keys -t rtorrent C-q

[Install]
WantedBy=multi-user.target
